@model EmployeeApplicatoin.Models.UserInformation
@{
    ViewData["Title"] = "Profile";
}

<h1>User Profile</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Personal Information</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">First Name:</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Surname:</dt>
                    <dd class="col-sm-8">@Model.Surname</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Qualification:</dt>
                    <dd class="col-sm-8">@Model.Qualification</dd>

                    <dt class="col-sm-4">Module:</dt>
                    <dd class="col-sm-8">@Model.Module</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to Home</a>
</div> 